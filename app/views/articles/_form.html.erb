  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2>The following errors prevented the article from created:</h2>

      <ul>
      <% article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>



<div class="row">
  <div class="col-md-12">
    <%= form_with(model: article, local: true, :html => {class: "form-horizontal", role: "form"}) do |form| %>
      <div class="form-group">
        <div class="control-label col-sm-2"> 
          <%= form.label :title %>
        </div>

        <div class="col-sm-8">
          <%= form.text_field :title, class: "form-control",  placeholder: "Title of article", autofocus: true%>
        </div>
      </div>

     <div class="form-group">
        <div class="control-label col-sm-2"> 
          <%= form.label :description %>
        </div>
        <div class="col-sm-8">
          <%= form.text_area :description, rows: 10, class: "form-control",  placeholder: "Body of article" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= form.submit class: "btn btn-primary btn-lg" %>
        </div>
      </div>
    <% end %>
  <div class="col-xs-4 col-xs-offset-4">
    [ <%= link_to 'Cancel request and return view articles', articles_path %> ]
  </div>

  </div>
</div>