<h1 align="center">Log in </h1>

 <%= form_for(:session, local: true, :html => {class: "form-horizontal", role: "form"},url: login_path) do |form| %>

     <div class="form-group">
        <div class="control-label col-sm-2"> 
          <%= form.label :email %>
        </div>
        <div class="col-sm-8">
          <%= form.email_field :email, class: "form-control",  placeholder: "Enter email" %>
        </div>
      </div>


     <div class="form-group">
        <div class="control-label col-sm-2"> 
          <%= form.label :password %>
        </div>
        <div class="col-sm-8">
          <%= form.password_field :password, class: "form-control",  placeholder: "Enter password", autocomplete: "off" %>
        </div>
      </div>


      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= form.submit "Log in", class: "btn btn-primary btn-lg" %>
        </div>
      </div>
    <% end %>
  <div class="col-xs-4 col-xs-offset-4">
    [ <%= link_to 'Cancel request and return view articles', articles_path %> ]
  </div>

